<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <report
                id="action_ctbltest_data_report"
                string="c容量测试报告"
                model="tbltestdata"
                report_type="qweb-html"
                file="equipment.ctbltest_data"
                name="equipment.ctbltest_data"

        />

        <!--测试-->
        <template id="ctbltest_data">
            <t t-call="web.html_container">
                <t t-set="doc" t-value="docs[0].with_context({'lang':'en_US'})"/>
                <t t-call="web.external_layout">
                    <div>
                        <div style="margin-top:20px;" class="row">
                            <h3 style="margin-top:20px;" class="col-12 text-center">
                                c容量测试报告
                            </h3>
                        </div>
                    </div>

                    <div class="page">
                        <table width="80%" align="center">
                                <tr>
                                    <th>
                                        <span> Body No.:</span>
                                    </th>
                                    <td>
                                        <span t-esc="doc[0].bodyno" />
                                    </td>
                                    <th>
                                        <span > コマＮｏ.:</span>
                                    </th>
                                    <td >
                                        <span t-esc="doc[0].komano"/>
                                    </td>

                                    <th>
                                        <span> 封入液Ｎｏ.:</span>
                                    </th>
                                    <td>
                                        <span t-esc="doc[0].stdkind"/>
                                    </td>
                                    <th>
                                        <span> 实验日:</span>
                                    </th>
                                    <td>
                                        <span t-esc="doc[0].testdate"/>
                                    </td>
                                </tr>
                        </table>
                        <table border="1" cellspacing="0" cellpadding="5" width="80%" height="80" align="center">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        <strong>100Khz</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>C1</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>C2</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>C1——C2</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>综合结果</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="text-align:center"> c容量(PF)</td>
                                    <td style="text-align:center">
                                        <span t-esc="doc[0].td_c1"/>
                                    </td>
                                    <td style="text-align:center">
                                        <span t-esc="doc[0].td_c2"/>
                                    </td>
                                    <td style="text-align:center">
                                        <span t-esc="doc[0].td_c3"/>
                                    </td>
                                    <td style="text-align:center" rowspan="2">
                                        <span t-esc="doc[0].test_result"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:center"> 损失系数(D)</td>
                                    <td style="text-align:center">
                                        <span t-esc="doc[0].td_d1"/>
                                    </td>
                                    <td style="text-align:center">
                                        <span t-esc="doc[0].td_d2"/>
                                    </td>
                                    <td style="text-align:center">——————</td>
                                </tr>
                            </tbody>
                        </table>
                        <table style="margin-top:20px;" border="1" cellspacing="0"  width="80%" height="40"  align="center">
                            <tr>
                                    <th class="text-center">
                                        <span>制定值</span>
                                    </th>
                                    <th class="text-center">
                                        <span>C1.C2</span>
                                    </th>
                                    <th class="text-center">
                                        <span>44.00~70.00</span>
                                    </th>
                                    <th class="text-center">
                                        <span>C1~C2</span>
                                    </th>
                                    <th class="text-center">
                                        <span>10.00以下</span>
                                    </th>
                                    <th class="text-center">
                                        <span>D</span>
                                    </th>
                                    <th class="text-center">
                                        <span>0.017以下</span>
                                    </th>

                                </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>